{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "JwksUrl": "http://authserver:8080/.well-known/openid-configuration/jwks",
    "Issuer": "http://authserver:8080",
    "Audience": "account_service"
  },
  "ReverseProxy": {
    "Routes": {
      "authService": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          },
          {
            "PathPrefix": "/api/v1/auth"
          }
        ]
      },
      "accountService": {
        "ClusterId": "accountCluster",
        "Match": {
          "Path": "/accounts/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUsersOnly",
        "Transforms": [
          {
            "PathRemovePrefix": "/accounts"
          },
          {
            "PathPrefix": "/api/v1/accounts"
          }
        ]
      },
      "transactionServce": {
        "ClusterId": "transactionCluster",
        "Match": {
          "Path": "/transactions/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUsersOnly",
        "Transforms": [
          {
            "PathRemovePrefix": "/transactions"
          },
          {
            "PathPrefix": "/api/v1/transactions"
          }
        ]
      },
      "historynServce": {
        "ClusterId": "historyCluster",
        "Match": {
          "Path": "/history/{**catch-all}"
        },
        "AuthorizationPolicy": "AuthenticatedUsersOnly",
        "Transforms": [
          {
            "PathRemovePrefix": "/history"
          },
          {
            "PathPrefix": "/api/v1/history"
          }
        ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authtDestination": {
            "Address": "http://authserver:8080"
          }
        }
      },
      "accountCluster": {
        "Destinations": {
          "accountDestination": {
            "Address": "http://accountservice:8080"
          }
        }
      },
      "transactionCluster": {
        "Destinations": {
          "accountDestination": {
            "Address": "http://transactionservice:8080"
          }
        }
      },
      "historyCluster": {
        "Destinations": {
          "accountDestination": {
            "Address": "http://historyservice:8080"
          }
        }
      }
    }
  }

}
